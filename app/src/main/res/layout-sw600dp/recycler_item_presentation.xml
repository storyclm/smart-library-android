<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="216dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/presentation_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

            <TextView
                    android:id="@+id/presentation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="36dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="ОБРАЗ ЖИЗНИ  osgheorihgoierhgoierhgipherigpherpghpeorhgpoerhgoperhgpoerhgo"
                    android:visibility="visible"/>

            <TextView
                    android:id="@+id/presentation_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/presentation_text"
                    android:layout_marginEnd="124dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    tools:text="Просто в сказку попала! ergergergergergerg efgergergergegerg"/>

            <TextView
                    android:id="@+id/presentation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/presentation_name"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textAllCaps="true"
                    tools:text="18 АВГУСТА"/>

        </RelativeLayout>

        <!--<TextView-->
        <!--android:id="@+id/new_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginEnd="8dp"-->
        <!--android:fontFamily="sans-serif"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="14sp"-->
        <!--android:textStyle="normal"-->
        <!--android:gravity="center"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:paddingStart="16dp"-->
        <!--android:paddingEnd="16dp"-->
        <!--android:paddingTop="6dp"-->
        <!--android:paddingBottom="6dp"-->
        <!--android:background="@drawable/label_background"-->
        <!--android:text="@string/new_label"-->
        <!--android:textAllCaps="true"-->
        <!--android:visibility="gone"/>-->


        <ImageView
                android:id="@+id/info_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_info"/>

        <TextView
                android:id="@+id/new_text"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="normal"
                android:gravity="bottom|center_horizontal"
                android:layout_marginTop="-50dp"
                android:layout_marginEnd="-50dp"
                android:paddingBottom="6dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="#2196f3"
                android:text="@string/new_label"
                android:textAllCaps="true"
                android:rotation="45"
                android:visibility="gone"/>


        <TextView
                android:id="@+id/download_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/label_background"
                android:text="@string/download_pres_text"
                android:textAllCaps="true"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/label_background"
                android:text="@string/update"
                android:textAllCaps="true"/>

        <ProgressBar
                android:id="@+id/deleting_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/progress_background"
                android:layout_centerInParent="true"/>

        <FrameLayout
                android:id="@+id/progress_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.github.mmin18.widget.RealtimeBlurView
                    android:id="@+id/blur_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:realtimeBlurRadius="10dp"/>


            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                <ImageView android:layout_width="80dp"
                           android:layout_height="80dp"
                           android:src="@drawable/progress_background"/>

                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                        android:id="@+id/progress"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:direction="clockwise"
                        app:drawDot="false"
                        app:enableProgressAnimation="true"
                        app:progressBackgroundColor="#3345bcff"
                        app:progressBackgroundStrokeWidth="8dp"
                        app:progressCap="round"
                        app:progressColor="#45b5f3"
                        app:progressStrokeWidth="8dp"
                        app:startAngle="270"
                        app:textColor="#666666"
                        app:textSize="24sp"
                        app:fillBackground="false"/>

                <ImageView
                        android:id="@+id/stop_load_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_pause"
                        android:layout_gravity="center"
                        android:padding="16dp"/>

            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>