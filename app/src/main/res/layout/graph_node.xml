<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="192dp"
        android:layout_height="108dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardElevation="2dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/slideImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@color/graph_item_background"/>

        <TextView
                android:id="@+id/slideName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                tools:text="swgelbge;nb;elrbsvsdvsdvsdvvsvsdvsdvsdvvsdvvsdvsdvsn"
                android:layout_margin="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>