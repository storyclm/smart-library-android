<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="400dp"
                                    android:layout_margin="14dp"
                                    android:minHeight="400dp"
                                    app:cardBackgroundColor="#e6e6e6"
                                    app:cardCornerRadius="6dp"
                                    app:cardElevation="0dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/presentationImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="400dp"
                android:scaleType="centerCrop"/>

        <android.support.v7.widget.CardView
                android:id="@+id/presentationText"
                android:layout_width="120dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/default_padding"
                app:cardBackgroundColor="#33000000"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp"/>

        <android.support.v7.widget.CardView
                android:id="@+id/presentationName"
                android:layout_width="230dp"
                android:layout_height="26dp"
                android:layout_below="@id/presentationText"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#33000000"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp"/>

        <android.support.v7.widget.CardView
                android:id="@+id/presentationDate"
                android:layout_width="120dp"
                android:layout_height="15dp"
                android:layout_below="@id/presentationName"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                app:cardBackgroundColor="#33000000"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>